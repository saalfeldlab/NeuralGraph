{
  // === Python environment ===
  "python-envs.pythonProjects": [
    {
      "path": "",
      "envManager": "ms-python.python:conda",
      "packageManager": "ms-python.python:conda"
    }
  ],
  "python.defaultInterpreterPath": "/workspace/.conda_envs/neural-graph-linux/bin/python",
  "python.terminal.activateEnvironment": true,
  "python.analysis.extraPaths": ["${workspaceFolder}/src"],
  "python.autoComplete.extraPaths": ["${workspaceFolder}/src"],
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.diagnosticMode": "workspace",

  // === Terminal ===
  "terminal.integrated.profiles.linux": {
    "neural-graph-linux": {
      "path": "/bin/bash",
      "args": ["-c", "source /workspace/.conda_envs/neural-graph-linux/bin/activate && exec bash"]
    }
  },
  "terminal.integrated.defaultProfile.linux": "neural-graph-linux",

  // === Autosave ===
  "files.autoSave": "onFocusChange",

  // Make sure nothing is excluded from watch
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/.hg/store/**": true,
    "**/log/**": true,
    "**/logs/**": true,
    "**/graphsdata/**": true,
    "**/.conda_envs/**": true
  }
}
